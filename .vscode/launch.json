{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Debug Angular Build in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "preLaunchTask": "npm: start",
      "webRoot": "${workspaceFolder}",
    },

    {
      "name": "Debug Angular Tests in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "preLaunchTask": "npm: test",
      "webRoot": "${workspaceFolder}",
    },
  ]
}
